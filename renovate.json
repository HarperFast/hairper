{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"semanticCommits": "enabled",
	"minimumReleaseAge": "3 days",
	"internalChecksFilter": "strict",
	"lockFileMaintenance": { "enabled": false },
	"packageRules": [
		{
			"matchDepTypes": [
				"action"
			],
			"pinDigests": true
		},
		{
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"matchCurrentVersion": "!/^0/",
			"automerge": true
		}
	]
}
